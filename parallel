#include <stdio.h>
#include <stdlib.h>
#include <pthread.h>
#include <string.h>

#define NUM_INSERTS 1000
#define NAME_LEN 20
#define COURSE_LEN 50
#define MAX_STUDENTS 100

typedef struct {
    char name[NAME_LEN];
    char course[COURSE_LEN];
    int year;
    int id;
} Student;

typedef struct {
    Student students[MAX_STUDENTS];
    int count;
} StudentArray;

const char *BINARY_FILE = "students.dat";
pthread_mutex_t file_lock;
pthread_mutex_t id_lock;

Student TEMPLATE = {
    .name = "John Doe",
    .course = "Computer Science",
    .year = 2,
    .id = 0
};

// Function to get the next available ID (thread-safe)
int get_next_id() {
    FILE *fp = fopen(BINARY_FILE, "rb");
    if (!fp) {
        return 1;
    }
    
    StudentArray sa;
    int max_id = 0;
    
    // Read existing students and find max ID
    while (fread(&sa, sizeof(StudentArray), 1, fp)) {
        for (int i = 0; i < sa.count; i++) {
            if (sa.students[i].id > max_id) {
                max_id = sa.students[i].id;
            }
        }
    }
    
    fclose(fp);
    return max_id + 1;
}

void *insert_student(void *arg) {
    Student s = TEMPLATE;
    
    // Get unique ID with lock protection
    pthread_mutex_lock(&id_lock);
    static int current_id = 0;
    if (current_id == 0) {
        current_id = get_next_id();
    }
    s.id = current_id++;
    pthread_mutex_unlock(&id_lock);
    
    // Write to binary file with lock protection
    pthread_mutex_lock(&file_lock);
    
    FILE *fp = fopen(BINARY_FILE, "ab");
    if (!fp) {
        printf("Error opening binary file!\n");
        pthread_mutex_unlock(&file_lock);
        return NULL;
    }
    
    // Write single student to binary file
    fwrite(&s, sizeof(Student), 1, fp);
    fclose(fp);
    
    pthread_mutex_unlock(&file_lock);
    
    pthread_exit(NULL);
}

int main() {
    pthread_t threads[NUM_INSERTS];
    
    pthread_mutex_init(&file_lock, NULL);
    pthread_mutex_init(&id_lock, NULL);
    
    // Create parallel inserts
    for (int i = 0; i < NUM_INSERTS; i++) {
        pthread_create(&threads[i], NULL, insert_student, NULL);
    }
    
    // Wait for all threads
    for (int i = 0; i < NUM_INSERTS; i++) {
        pthread_join(threads[i], NULL);
    }
    
    pthread_mutex_destroy(&file_lock);
    pthread_mutex_destroy(&id_lock);
    
    printf("Finished inserting %d students into %s (Parallel Binary Version)\n", 
           NUM_INSERTS, BINARY_FILE);
    
    return 0;
}